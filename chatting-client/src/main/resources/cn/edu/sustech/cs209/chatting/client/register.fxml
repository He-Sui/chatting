<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.edu.sustech.cs209.chatting.client.RegisterController">
    <children>
        <Label layoutX="244.0" layoutY="70.0" prefHeight="61.0" prefWidth="113.0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #303F9F;" text="Register" />
        <VBox alignment="CENTER" layoutX="175.0" layoutY="150.0" prefHeight="151.0" prefWidth="250.0" spacing="20.0">
            <TextField fx:id="usernameTextField" promptText="Username" style="-fx-background-color: #E0E0E0;" />
            <PasswordField fx:id="passwordTextField" promptText="Password" style="-fx-background-color: #E0E0E0;" />
            <PasswordField fx:id="confirmPasswordTextField" promptText="Confirm Password" style="-fx-background-color: #E0E0E0;" />
            <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" style="-fx-background-color: #303F9F; -fx-text-fill: #F5F5F5;" text="Register" />
        </VBox>
        <Button layoutX="255.0" layoutY="331.0" onAction="#backToLogin" style="-fx-background-color: transparent; -fx-text-fill: #303F9F;" text="Back to Login" />
    </children>
</AnchorPane>
